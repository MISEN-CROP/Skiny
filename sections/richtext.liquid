{% if section.settings.title != blank or section.settings.content != blank %}
  <section
    class="richtext-section py-8 bg-[var(--bg-gis-second-primary)]"
  >
    <div class="page-container md:!p-0">
      <div class="bg-[var(--bg-second)] px-4 py-10 lg:px-12 lg:py-8 rounded-3xl">
        {% if section.settings.title != blank %}
          <div class="text-{{ section.settings.title_alignment | default: 'text-center' }} mb-6">
            <h2
              class="text-4xl lg:text-5xl xl:text-6xl font-bold tracking-tight"
              style="
                color: {{ section.settings.title_color | default: '#1B365D' }};
                font-family: {{ section.settings.title_font | default: 'system-ui, -apple-system, sans-serif' }};
              "
            >
              {{ section.settings.title }}
            </h2>
          </div>
        {% endif %}

        {% if section.settings.content != blank %}
          <div class="prose prose-lg max-w-none">
            <div
              class="text-base lg:text-lg leading-relaxed space-y-6"
              style="
                color: {{ section.settings.text_color | default: '#4A5568' }};
                font-family: {{ section.settings.content_font | default: 'system-ui, -apple-system, sans-serif' }};
                text-align: {{ section.settings.text_alignment | default: 'left' }};
              "
            >
              {{ section.settings.content }}
            </div>
          </div>
        {% endif %}

        <!-- Call to Action Button -->
        {% if section.settings.button_text != blank %}
          <div class="text-{{ section.settings.text_alignment | default: 'left' }} mt-12">
            <a
              href="{{ section.settings.button_url | default: '#' }}"
              class="inline-flex items-center justify-center px-8 py-4 text-base font-semibold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg"
              style="
                background-color: {{ section.settings.button_bg_color | default: '#1B365D' }};
                color: {{ section.settings.button_text_color | default: '#FFFDF1' }};
              "
            >
              {{ section.settings.button_text }}
              {% if section.settings.button_icon %}
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              {% endif %}
            </a>
          </div>
        {% endif %}

        <!-- Additional Content Blocks -->
        {% if section.blocks.size > 0 %}
          <div class="mt-16 space-y-12">
            {% for block in section.blocks %}
              {% if block.type == 'text_block' %}
                <div class="prose prose-lg max-w-none">
                  {% if block.settings.heading != blank %}
                    <h3
                      class="text-2xl lg:text-3xl font-bold mb-6"
                      style="
                        color: {{ section.settings.title_color | default: '#1B365D' }};
                        text-align: {{ section.settings.text_alignment | default: 'left' }};
                      "
                    >
                      {{ block.settings.heading }}
                    </h3>
                  {% endif %}

                  {% if block.settings.text != blank %}
                    <div
                      class="text-base lg:text-lg leading-relaxed"
                      style="
                        color: {{ section.settings.text_color | default: '#4A5568' }};
                        text-align: {{ section.settings.text_alignment | default: 'left' }};
                      "
                    >
                      {{ block.settings.text }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Rich Text",
  "tag": "section",
  "class": "richtext-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Title Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "placeholder": "FOUNDER STORY"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#1B365D"
    },
    {
      "type": "select",
      "id": "title_font",
      "label": "Title Font Family",
      "options": [
        {
          "value": "system-ui, -apple-system, sans-serif",
          "label": "Default Sans-serif"
        },
        {
          "value": "'Times New Roman', Times, serif",
          "label": "Times New Roman"
        },
        {
          "value": "'Courier New', Courier, monospace",
          "label": "Courier New"
        },
        {
          "value": "Georgia, 'Times New Roman', serif",
          "label": "Georgia"
        },
        {
          "value": "'Helvetica Neue', Helvetica, sans-serif",
          "label": "Helvetica"
        }
      ],
      "default": "system-ui, -apple-system, sans-serif"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Main Content"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#4A5568"
    },
    {
      "type": "select",
      "id": "content_font",
      "label": "Content Font Family",
      "options": [
        {
          "value": "system-ui, -apple-system, sans-serif",
          "label": "Default Sans-serif"
        },
        {
          "value": "'Times New Roman', Times, serif",
          "label": "Times New Roman"
        },
        {
          "value": "'Courier New', Courier, monospace",
          "label": "Courier New"
        },
        {
          "value": "Georgia, 'Times New Roman', serif",
          "label": "Georgia"
        },
        {
          "value": "'Helvetica Neue', Helvetica, sans-serif",
          "label": "Helvetica"
        }
      ],
      "default": "system-ui, -apple-system, sans-serif"
    },
    {
      "type": "header",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "placeholder": "Read More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "checkbox",
      "id": "button_icon",
      "label": "Show Arrow Icon",
      "default": false
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#1B365D"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFDF1"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Additional Text Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Block Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Block Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Rich Text",
      "settings": {
        "title": "FOUNDER STORY",
        "content": "The Skinny Confidential was founded by Lauryn Bosstick to romanticize your daily self-care routine. Whether it's an energizing morning ritual or a relaxing evening routine, we help you habit-stack wellness to elevate your day.\n\nLauryn first launched The Skinny Confidential as a blog in 2011, featuring unfiltered advice spanning from skincare to wellness to relationships to entrepreneurship. It led to the launch of TSC brand in 2021, with the first products being the award-winning Ice Roller and De-Puffing Face Oil.",
        "text_alignment": "left"
      }
    }
  ]
}
{% endschema %}
