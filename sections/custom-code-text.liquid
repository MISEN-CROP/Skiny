<div class="custom-code-text relative py-4">
  <div class="page-container bg-[var(--bg-second)] mx-auto px-6 py-8 rounded-xl mb-4">
    <div class="flex items-center gap-6">
      <p class="custom-paragraph text-xl md:text-3xl max-w-full md:max-w-3xl">
        {{ section.settings.text_part1 }}
        {% if section.settings.show_images %}
          <span class="inline-images">
            {% for block in section.blocks %}
              {% if block.type == 'image' %}
                <img
                  src="{{ block.settings.image | image_url }}"
                  alt="{{ block.settings.image_alt | escape }}"
                  style="zoom: 1.00552;"
                  role="presentation"
                >
              {% endif %}
            {% endfor %}
          </span>
        {% endif %}
        {{ section.settings.text_part2 }}
      </p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Code Text",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "text_part1",
      "label": "Text Part 1",
      "default": "Clean beauty and wellness essentials that actually work."
    },
    {
      "type": "text",
      "id": "text_part2",
      "label": "Text Part 2",
      "default": "Upgrade your daily routine with products that are elevated, intentional and gorgeous to look at."
    },
    {
      "type": "checkbox",
      "id": "show_images",
      "label": "Show Images",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image Alt Text",
          "default": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Code Text",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
