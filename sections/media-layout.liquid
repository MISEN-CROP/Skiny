<style>
  .left-media-images-layout {
    justify-content: space-between;
  }

  .left-media-images-layout img {
    width: 180px;
    height: 180px;
    object-fit: cover;
  }

  @media (max-width: 575.98px) {
    .left-media-images-layout {
      flex-direction: row;
    }

    .left-media-images-layout img:last-child {
      display: none;
    }
  }
</style>

<div>
  <div class="page-container">
    <div class="flex flex-col lg:flex-row gap-4 md:gap-8">
      <div class="flex flex-col lg:flex-row w-full lg:w-1/2 gap-4 lg:gap-6">
        <div class="flex flex-col gap-4 left-media-images-layout">
          {% if section.settings.image_1 %}
            <img
              src="{{ section.settings.image_1 | img_url: '1024x1024' }}"
              alt="{{ section.settings.image_1_alt | default: 'Product image 1' }}"
              class="w-full h-auto object-cover rounded-lg"
              loading="lazy"
            >
          {% endif %}

          {% if section.settings.image_2 %}
            <img
              src="{{ section.settings.image_2 | img_url: '1024x1024' }}"
              alt="{{ section.settings.image_2_alt | default: 'Product image 2' }}"
              class="w-full h-auto object-cover rounded-lg"
              loading="lazy"
            >
          {% endif %}

          {% if section.settings.image_3 %}
            <img
              src="{{ section.settings.image_3 | img_url: '1024x1024' }}"
              alt="{{ section.settings.image_3_alt | default: 'Product image 3' }}"
              class="w-full h-auto object-cover rounded-lg"
              loading="lazy"
            >
          {% endif %}
        </div>

        <div class="flex flex-col justify-center order-first justify-end">
          {% if section.settings.heading %}
            <h2 class="text-2xl lg:text-3xl font-medium mb-4 font-pr" style="color: var(--gig-primary);">
              {{ section.settings.heading }}
            </h2>
          {% endif %}

          {% if section.settings.description %}
            <p class="text-lg mb-6 font-pr-light leading-relaxed" style="color: var(--gig-primary);">
              {{ section.settings.description }}
            </p>
          {% endif %}

          {% if section.settings.button_text and section.settings.button_link %}
            <div>
              <a
                href="{{ section.settings.button_link }}"
                class="inline-block px-6 py-3 border-1 rounded-full font-medium transition-all duration-300 ease-in-out hover:text-white font-pr btn-custom"
                style="border-color: var(--gig-primary); color: var(--gig-primary);"
              >
                {{ section.settings.button_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>

      <div class="flex-1 md:mt-6 lg:mt-0">
        {% if section.settings.main_image %}
          <img
            src="{{ section.settings.main_image | img_url: '1024x1024' }}"
            alt="{{ section.settings.main_image_alt | default: 'Main product image' }}"
            class="w-full h-auto object-cover rounded-lg p-1 bg-[var(--bg-second)]"
            loading="lazy"
          >
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
  .font-pr {
    font-family: var(--font-primary);
  }

  .font-pr-light {
    font-family: var(--font-primary-light);
  }

  .btn-custom:hover {
    background-color: var(--gig-primary) !important;
    color: var(--gig-white) !important;
  }
</style>

{% schema %}
{
  "name": "Media Layout",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Left Side Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "image_1_alt",
      "label": "Image 1 Alt Text",
      "info": "Describe the image for accessibility"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "image_2_alt",
      "label": "Image 2 Alt Text",
      "info": "Describe the image for accessibility"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "text",
      "id": "image_3_alt",
      "label": "Image 3 Alt Text",
      "info": "Describe the image for accessibility"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Don't Put Your Routine on Hold."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Subscribe and save 15% and your refills will be delivered right to your door."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Right Side Image"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "text",
      "id": "main_image_alt",
      "label": "Main Image Alt Text",
      "info": "Describe the image for accessibility"
    }
  ],
  "presets": [
    {
      "name": "Media Layout"
    }
  ]
}
{% endschema %}
